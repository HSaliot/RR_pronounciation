<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1">
  
    <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
      <menus>
        <Menu fx:id="menu" text="File">
          <items>
            <MenuItem fx:id="add" text="Add" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    
    <SplitPane fx:id="body" dividerPositions="0.2" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      
        <ScrollPane fx:id="left" prefHeight="-1.0" prefWidth="-1">
            <HBox fx:id="leftHB" />
        </ScrollPane>
        
        <SplitPane fx:id="right" dividerPositions="0.5" maxWidth="350" minWidth="350" orientation="VERTICAL" prefWidth="350">
            <VBox fx:id="rightTopVB" />
            <HBox fx:id="rightBottomHB" />
        </SplitPane>
    </SplitPane>

</VBox>
